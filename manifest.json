{
  "manifest_version": 3,
  "name": "YouTube Ad Skipper and shorts Blocker",
  "version": "1.1",
  "description": "Skips YouTube ads by fast-forwarding them at 10x speed and muting sound and also block shorts.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}